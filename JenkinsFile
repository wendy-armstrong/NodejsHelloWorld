pipeline {
  agent any
  
  tools {nodejs "nodejs"}
 
 stages {    
    stage('Cloning Git') {
      steps {
        git 'https://github.com/wendy-armstrong/NodejsHelloWorld'
      }
    }
	
	  stage('Install dependencies') {
      steps {
        sh 'npm install'
      }
    }
     
    stage('Run Script') {
      steps {
          sh 'node index.js'
      }
    }  

    stage('Test output'){
      steps {
        sh 'ls'
        sh "wc -l output.txt | awk '{print $1}'" 
      }
    }    
  }
}