pipeline {
  agent any
  
  tools {nodejs "nodejs"}
 
 stages {    

    stage('Cloning Git') {
      steps {
        git 'https://github.com/wendy-armstrong/NodejsHelloWorld'
      }
    }
	
	  stage('Install dependencies') {
      steps {
        sh 'npm install'
      }
    }
     
    stage('Run Script') {
      steps {
          sh 'node index.js'
      }
    }  

    stage('Test output'){
      steps {
        script {
          def lineCount = sh(script: "wc -l < output.txt", returnStdout: true )
          println("line count = ${lineCount}")
          if(lineCount > 1)
          {
            currentBuild.result = 'FAILURE'
          }
        }
      }
    }    
  }
 post {
    always {
      emailext to: "wendyjeanarmstrong@gmail.com", subject: currentBuild.result, body: currentBuild.result, recipientProviders: [[$class: 'DevelopersRecipientProvider'], [$class: 'RequesterRecipientProvider']]         
   }
 }

}